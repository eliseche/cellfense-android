<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#303f41"
    android:orientation="vertical">

    <TextView
        android:id="@+id/alert_yes_no_neutral_description"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_margin="5dp"
        android:textColor="#ffffff"
        android:textSize="28sp" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_margin="5dp"
        android:gravity="center"
        android:orientation="horizontal">

        <Button
            android:id="@+id/alert_yes_no_neutral_positive"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_margin="10dp"
            android:background="#364f3f"
            android:paddingLeft="10dp"
            android:paddingRight="10dp"
            android:text="Yes"
            android:textColor="#ffffff"
            android:textSize="24sp" />

        <Button
            android:id="@+id/alert_yes_no_neutral_negative"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_margin="10dp"
            android:background="#364f3f"
            android:paddingLeft="10dp"
            android:paddingRight="10dp"
            android:text="No"
            android:textColor="#ffffff"
            android:textSize="24sp" />

        <Button
            android:id="@+id/alert_yes_no_neutral_neutral"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_margin="10dp"
            android:background="#364f3f"
            android:paddingLeft="10dp"
            android:paddingRight="10dp"
            android:text="Ok"
            android:textColor="#ffffff"
            android:textSize="24sp" />

    </LinearLayout>

</LinearLayout>